@page
@model CoreCrud.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.Id" />
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamRevenue" class="control-label"></label>
                <input asp-for="Team.TeamRevenue" class="form-control" />
                <span asp-validation-for="Team.TeamRevenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.DateFound" class="control-label"></label>
                <input asp-for="Team.DateFound" class="form-control" />
                <span asp-validation-for="Team.DateFound" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.IsAmerican" class="control-label"></label>
                <input asp-for="Team.IsAmerican" class="form-control" />
                <span asp-validation-for="Team.IsAmerican" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.CountryId" class="control-label"></label>
                <select asp-for="Team.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="Team.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
